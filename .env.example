# AiShorts v2.0 - Environment Variables Template
# Copie para .env e configure suas chaves

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=nvidia/nemotron-nano-9b-v2:free
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Project Configuration
PROJECT_ENV=development
LOG_LEVEL=INFO
LOG_FORMAT=json

# Theme Generator Configuration
THEME_CATEGORIES=science,history,nature,technology,culture,space,animals,psychology,geography,food
MAX_TOKENS_THEME=150
TEMPERATURE_THEME=0.7

# Retry and Rate Limiting
MAX_RETRIES=3
RETRY_DELAY=1.0
RATE_LIMIT_PER_MINUTE=20

# Logging
LOG_FILE=logs/aishorts.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Data Storage
OUTPUT_DIR=data/output
TEMP_DIR=data/temp
CACHE_DIR=data/cache

# LLM Integration Feature Flags
# Controls which LLM integrations are active
USE_LLM_THEME_STRATEGY=true
USE_LLM_SCRIPT_REFINER=true
USE_LLM_BROLL_PLANNER=true
USE_LLM_RERANKER=false
USE_LLM_CO_REVIEWER=false
USE_LLM_CAPTION_VALIDATOR=false

# LLM Content Cache
ENABLE_CONTENT_CACHE=true
CACHE_TTL_HOURS=24

# LLM Safety Limits
MAX_THEME_VARIATIONS=5
MAX_SCRIPT_REFINEMENTS=3
MAX_BROLL_QUERIES=6